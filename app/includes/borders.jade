#borders-nav.accordion
  sides = {'all-sides': 'All Sides', 'top': 'Top', 'right': 'Right', 'bottom': 'Bottom', 'left': 'Left'}
  each label, id in sides
    .accordion-group
      .accordion-heading
        a.accordion-toggle(data-toggle='collapse', data-parent='#borders-nav', href="##{styleId}-#{id}")
          input(type='checkbox')
          = label
      .accordion-body.collapse(id="#{styleId}-#{id}")
        .accordion-inner
          include border-form
